      <%= link_to_in_li "CALIDAD", '/calidad' %>
      <%= link_to_in_li "BLOG", '/blog' %>
      <%= link_to_in_li "CONTACTO", '/contact_inquiries/new' %>
    <% elsif locale.to_s == "en" %>
      <%= link_to_in_li "HOME", '/' + locale.to_s %>
      <%= link_to_in_li "THE COMPANY", '/' + locale.to_s + '/nosotros' %>
      <%= link_to_in_li "SWEET ONION", '/' + locale.to_s + '/descripcion-producto' %>
      <%= link_to_in_li "PRODUCTS",'/' + locale.to_s + '/products' %>
      <%= link_to_in_li "QUALITY", '/' +locale.to_s + '/calidad' %>
      <%= link_to_in_li "BLOG", '/' +locale.to_s + '/blog' %>
      <%= link_to_in_li "CONTACT", '/' +locale.to_s + '/contacto' %>
    <% else %>
      <%= link_to_in_li "INÍCIO", '/' + locale.to_s %>
      <%= link_to_in_li "A EMPRESA", '/' + locale.to_s + '/a-empresa' %>
      <%= link_to_in_li "CEBOLA AMARELA",'/' + locale.to_s + '/descripcion-producto' %>
      <%= link_to_in_li "PRODUTOS",'/' + locale.to_s + '/produtos' %>
      <%= link_to_in_li "QUALIDADE", '/' +locale.to_s + '/qualidade' %>
      <%= link_to_in_li "BLOG", '/' +locale.to_s + '/blog' %>
      <%= link_to_in_li "CONTATO", '/' +locale.to_s + '/contato' %>
    <% end %>
  </ul>
</nav>