<section class="product container line">
  <h2>Ofrecemos productos de calidad</h2>
  <article>
    <a href="/descripcion-producto">
      <div class="overlay"></div>
      <%= image_tag 'productos/amarilla-background.jpg' %>
      <span>Cebolla amarilla</span>
    </a>
  </article>
  <article>
    <a href="/descripcion-producto">
      <div class="overlay"></div>
      <%= image_tag 'productos/roja-background.jpg' %>
      <span>Cebolla roja</span>
    </a>
  </article>
  <article>
    <a href="/descripcion-producto">
      <div class="overlay"></div>
      <%= image_tag 'productos/ajos-background.jpg' %>
      <span>Ajos</span>
    </a>
  </article>
</section>
<section class="container blog">
  <h2>Recetas</h2>
  <% @posts.each do |post| %>
    <% if post.live? %>
    <article class="blog-1">
      <div class="overlay"></div>
      <% if (categories = post.categories.translated).any? %>
        <span class='category'>
          <%=raw categories.collect { |category| link_to category.title, refinery.blog_category_path(category) }.to_sentence %>
        </span>
      <% end %>
      <div class="info">
        <span class="description">
            <%= link_to refinery.blog_post_path(post) %>
            <%= image_tag 'blog/blog1.jpg' %>
        </span>
        <span class="title"><%= link_to post.title, refinery.blog_post_path(post) %></span>
      </div>
    </article>
    <% end %>
  <% end %>
</section>